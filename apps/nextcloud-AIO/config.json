{
  "$schema": "../schema.json",
  "name": "Nextcloud AIO",
  "available": true,
  "exposable": true,
  "port": 8083,
  "id": "nextcloud",
  "tipi_version": 1,
  "version": "25.0",
  "categories": [
    "data"
  ],
  "description": "Nextcloud is a self-hosted, open source, and fully-featured cloud storage solution for your personal files, office documents, and photos.",
  "short_desc": "Netxtcloud all in one",
  "author": "Nextcloud GmbH",
  "source": "https://github.com/nextcloud/server",
  "form_fields": [
    {
      "type": "text",
      "label": "MYSQL DB",
      "max": 50,
      "min": 1,
      "required": true,
      "env_variable": "NEXTCLOUD_AIO_DATABASE"
    },
    {
      "type": "text",
      "label": "MYSQL HOST",
      "max": 50,
      "min": 1,
      "required": true,
      "env_variable": "NEXTCLOUD_AIO_DATABASE_HOST"
    },
    {
      "type": "text",
      "label": "MYSQL user",
      "max": 50,
      "min": 1,
      "required": true,
      "env_variable": "NEXTCLOUD_AIO_DATABASE_USER"
    },
    {
      "type": "Password",
      "label": "MYSQL pass",
      "max": 50,
      "min": 1,
      "required": true,
      "env_variable": "NEXTCLOUD_AIO_DATABASE_PASS"
    },
    {
      "type": "text",
      "label": "Username",
      "max": 50,
      "min": 3,
      "required": true,
      "env_variable": "NEXTCLOUD_AIO_ADMIN_USER"
    },
    {
      "type": "password",
      "label": "Password",
      "max": 50,
      "min": 10,
      "required": true,
      "env_variable": "NEXTCLOUD_AIO_ADMIN_PASSWORD"
    }
  ]
}
